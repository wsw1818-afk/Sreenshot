<Window x:Class="Screenshot.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="설정"
        Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1e1e1e">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- ComboBox 토글 버튼 템플릿 -->
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="Border" Grid.ColumnSpan="2" Background="#333333" BorderBrush="#555555" BorderThickness="1" CornerRadius="2"/>
                <Border Grid.Column="0" Background="#333333" BorderBrush="#555555" BorderThickness="0" CornerRadius="2,0,0,2"/>
                <Path x:Name="Arrow" Grid.Column="1" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Center"
                      Data="M 0 0 L 4 4 L 8 0 Z"/>
            </Grid>
        </ControlTemplate>

        <!-- ComboBox 텍스트박스 템플릿 -->
        <ControlTemplate x:Key="ComboBoxTextBox" TargetType="TextBox">
            <Border x:Name="PART_ContentHost" Focusable="False" Background="{TemplateBinding Background}"/>
        </ControlTemplate>

        <!-- 다크 테마 ComboBox 스타일 -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton" Template="{StaticResource ComboBoxToggleButton}"
                                          Grid.Column="2" Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"/>
                            <ContentPresenter Name="ContentSite" IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="8,3,23,3" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid Name="DropDown" SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="#333333" BorderBrush="#555555" BorderThickness="1"/>
                                    <ScrollViewer Margin="2" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 다크 테마 ComboBoxItem 스타일 -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border" Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                            <ContentPresenter>
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0078d4"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0078d4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GroupHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#0078d4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0078d4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- 저장 설정 -->
                <TextBlock Text="저장 설정" Style="{StaticResource GroupHeader}"/>

                <TextBlock Text="저장 폴더"/>
                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SaveFolderTextBox" Grid.Column="0"/>
                    <Button Content="찾아보기" Grid.Column="1" Margin="10,0,0,0"
                            Style="{StaticResource SecondaryButton}"
                            Click="BrowseFolder_Click"/>
                </Grid>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="파일 형식"/>
                        <ComboBox x:Name="FormatComboBox" Margin="0,5,0,0">
                            <ComboBoxItem Content="PNG" Tag="png"/>
                            <ComboBoxItem Content="JPG" Tag="jpg"/>
                            <ComboBoxItem Content="BMP" Tag="bmp"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="JPG 품질"/>
                        <ComboBox x:Name="QualityComboBox" Margin="0,5,0,0">
                            <ComboBoxItem Content="100% (최고)" Tag="100"/>
                            <ComboBoxItem Content="95% (고품질)" Tag="95"/>
                            <ComboBoxItem Content="90%" Tag="90"/>
                            <ComboBoxItem Content="80%" Tag="80"/>
                            <ComboBoxItem Content="70%" Tag="70"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <CheckBox x:Name="OrganizeByDateCheckBox" Content="날짜별 폴더로 정리"/>
                <CheckBox x:Name="AutoSaveCheckBox" Content="캡처 후 자동 저장"/>
                <CheckBox x:Name="CopyToClipboardCheckBox" Content="캡처 후 클립보드에 복사"/>

                <!-- 동작 설정 -->
                <TextBlock Text="동작 설정" Style="{StaticResource GroupHeader}"/>

                <CheckBox x:Name="PlaySoundCheckBox" Content="캡처 사운드 재생"/>
                <CheckBox x:Name="OpenEditorCheckBox" Content="캡처 후 편집 창 열기"/>

                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="지연 캡처 시간 (초)"/>
                    <ComboBox x:Name="DelayComboBox" Margin="0,5,0,0" Width="100" HorizontalAlignment="Left">
                        <ComboBoxItem Content="3초" Tag="3"/>
                        <ComboBoxItem Content="5초" Tag="5"/>
                        <ComboBoxItem Content="10초" Tag="10"/>
                    </ComboBox>
                </StackPanel>

                <!-- 시스템 설정 -->
                <TextBlock Text="시스템 설정" Style="{StaticResource GroupHeader}"/>

                <TextBlock Text="X 버튼 동작" Margin="0,5,0,5"/>
                <RadioButton x:Name="CloseToTrayRadio" Content="트레이로 숨기기 (백그라운드 실행)"
                             Foreground="White" GroupName="CloseAction" Margin="15,0,0,5"/>
                <RadioButton x:Name="CloseToExitRadio" Content="앱 완전 종료"
                             Foreground="White" GroupName="CloseAction" Margin="15,0,0,0"/>

                <CheckBox x:Name="StartMinimizedCheckBox" Content="앱 실행 시 창 숨기고 트레이에서 대기" Margin="0,15,0,0"/>
                <CheckBox x:Name="RunOnStartupCheckBox" Content="Windows 부팅 시 자동 실행"/>

                <!-- 스마트 기능 -->
                <TextBlock Text="스마트 기능" Style="{StaticResource GroupHeader}"/>

                <CheckBox x:Name="AutoPrivacyMaskingCheckBox" Content="자동 개인정보 마스킹 (주민번호, 카드번호 등)"/>
                <CheckBox x:Name="EnableWatermarkCheckBox" Content="워터마크 삽입"/>
                <CheckBox x:Name="EnableAuditLogCheckBox" Content="감사 로그 기록 (캡처 기록 저장)"/>

                <!-- 단축키 -->
                <TextBlock Text="단축키" Style="{StaticResource GroupHeader}"/>
                <TextBlock Text="단축키 입력란을 클릭하고 원하는 키 조합을 누르세요"
                           Foreground="#666666" FontSize="11" Margin="0,0,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="전체 화면" VerticalAlignment="Center" Margin="0,5"/>
                    <TextBox x:Name="FullScreenHotkeyBox" Grid.Row="0" Grid.Column="1"
                             IsReadOnly="True" Margin="0,5" Padding="8,6"
                             PreviewKeyDown="HotkeyBox_PreviewKeyDown" GotFocus="HotkeyBox_GotFocus"
                             Tag="FullScreen"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="영역 선택" VerticalAlignment="Center" Margin="0,5"/>
                    <TextBox x:Name="RegionHotkeyBox" Grid.Row="1" Grid.Column="1"
                             IsReadOnly="True" Margin="0,5" Padding="8,6"
                             PreviewKeyDown="HotkeyBox_PreviewKeyDown" GotFocus="HotkeyBox_GotFocus"
                             Tag="Region"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="활성 창" VerticalAlignment="Center" Margin="0,5"/>
                    <TextBox x:Name="WindowHotkeyBox" Grid.Row="2" Grid.Column="1"
                             IsReadOnly="True" Margin="0,5" Padding="8,6"
                             PreviewKeyDown="HotkeyBox_PreviewKeyDown" GotFocus="HotkeyBox_GotFocus"
                             Tag="Window"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="지연 캡처" VerticalAlignment="Center" Margin="0,5"/>
                    <TextBox x:Name="DelayedHotkeyBox" Grid.Row="3" Grid.Column="1"
                             IsReadOnly="True" Margin="0,5" Padding="8,6"
                             PreviewKeyDown="HotkeyBox_PreviewKeyDown" GotFocus="HotkeyBox_GotFocus"
                             Tag="Delayed"/>
                </Grid>

                <Button Content="기본값으로 초기화" Style="{StaticResource SecondaryButton}"
                        HorizontalAlignment="Left" Margin="0,10,0,0"
                        Click="ResetHotkeys_Click"/>
            </StackPanel>
        </ScrollViewer>

        <!-- 하단 버튼 -->
        <Border Grid.Row="1" Background="#252525" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="취소" Style="{StaticResource SecondaryButton}"
                        Click="Cancel_Click" Margin="0,0,10,0"/>
                <Button Content="저장" Style="{StaticResource PrimaryButton}"
                        Click="Save_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
