<Window x:Class="Screenshot.Views.ImageEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="이미지 편집" Height="600" Width="900"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e1e">

    <Window.Resources>
        <Style x:Key="ToolButton" TargetType="ToggleButton">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#444444"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#0078d4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#0078d4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1084d8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ColorButton" TargetType="RadioButton">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                BorderBrush="#555555" BorderThickness="2">
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="White"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 상단 툴바 -->
        <Border Grid.Row="0" Background="#252525" Padding="10">
            <StackPanel Orientation="Horizontal">
                <!-- 도구 버튼 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                    <ToggleButton x:Name="BtnArrow" Style="{StaticResource ToolButton}"
                                  ToolTip="화살표 (A)" Click="Tool_Click" Tag="Arrow">
                        <TextBlock Text="➔" FontSize="18"/>
                    </ToggleButton>
                    <ToggleButton x:Name="BtnRect" Style="{StaticResource ToolButton}"
                                  ToolTip="사각형 (R)" Click="Tool_Click" Tag="Rectangle">
                        <TextBlock Text="▢" FontSize="18"/>
                    </ToggleButton>
                    <ToggleButton x:Name="BtnEllipse" Style="{StaticResource ToolButton}"
                                  ToolTip="원 (E)" Click="Tool_Click" Tag="Ellipse">
                        <TextBlock Text="○" FontSize="18"/>
                    </ToggleButton>
                    <ToggleButton x:Name="BtnLine" Style="{StaticResource ToolButton}"
                                  ToolTip="선 (L)" Click="Tool_Click" Tag="Line">
                        <TextBlock Text="╱" FontSize="18"/>
                    </ToggleButton>
                    <ToggleButton x:Name="BtnText" Style="{StaticResource ToolButton}"
                                  ToolTip="텍스트 (T)" Click="Tool_Click" Tag="Text">
                        <TextBlock Text="T" FontSize="18" FontWeight="Bold"/>
                    </ToggleButton>
                    <ToggleButton x:Name="BtnHighlight" Style="{StaticResource ToolButton}"
                                  ToolTip="형광펜 (H)" Click="Tool_Click" Tag="Highlight">
                        <TextBlock Text="▬" FontSize="18" Foreground="Yellow"/>
                    </ToggleButton>
                    <ToggleButton x:Name="BtnMosaic" Style="{StaticResource ToolButton}"
                                  ToolTip="모자이크 (M)" Click="Tool_Click" Tag="Mosaic">
                        <TextBlock Text="▦" FontSize="18"/>
                    </ToggleButton>
                </StackPanel>

                <Rectangle Width="1" Fill="#444444" Margin="5,0"/>

                <!-- 색상 선택 -->
                <StackPanel Orientation="Horizontal" Margin="10,0">
                    <RadioButton x:Name="ColorRed" Style="{StaticResource ColorButton}"
                                 Background="#F44336" IsChecked="True" GroupName="Color"/>
                    <RadioButton x:Name="ColorGreen" Style="{StaticResource ColorButton}"
                                 Background="#4CAF50" GroupName="Color"/>
                    <RadioButton x:Name="ColorBlue" Style="{StaticResource ColorButton}"
                                 Background="#2196F3" GroupName="Color"/>
                    <RadioButton x:Name="ColorYellow" Style="{StaticResource ColorButton}"
                                 Background="#FFEB3B" GroupName="Color"/>
                    <RadioButton x:Name="ColorWhite" Style="{StaticResource ColorButton}"
                                 Background="White" GroupName="Color"/>
                    <RadioButton x:Name="ColorBlack" Style="{StaticResource ColorButton}"
                                 Background="Black" GroupName="Color"/>
                </StackPanel>

                <Rectangle Width="1" Fill="#444444" Margin="5,0"/>

                <!-- 두께 선택 -->
                <StackPanel Orientation="Horizontal" Margin="10,0" VerticalAlignment="Center">
                    <TextBlock Text="두께:" Foreground="#888888" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <Slider x:Name="ThicknessSlider" Width="80" Minimum="1" Maximum="10" Value="3"
                            VerticalAlignment="Center"/>
                    <TextBlock x:Name="ThicknessText" Text="3" Foreground="White" Width="20"
                               VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

                <Rectangle Width="1" Fill="#444444" Margin="5,0"/>

                <!-- 실행 취소/다시 실행 -->
                <StackPanel Orientation="Horizontal" Margin="10,0">
                    <Button x:Name="BtnUndo" Content="↩" FontSize="16" Width="40" Height="40"
                            Style="{StaticResource ActionButton}" Background="#333333"
                            ToolTip="실행 취소 (Ctrl+Z)" Click="Undo_Click"/>
                    <Button x:Name="BtnRedo" Content="↪" FontSize="16" Width="40" Height="40"
                            Style="{StaticResource ActionButton}" Background="#333333"
                            ToolTip="다시 실행 (Ctrl+Y)" Click="Redo_Click" Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 이미지 편집 영역 -->
        <Border Grid.Row="1" Background="#1a1a1a" Margin="10">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Canvas x:Name="EditCanvas" Background="Transparent"
                        MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                        MouseMove="Canvas_MouseMove"
                        MouseLeftButtonUp="Canvas_MouseLeftButtonUp">
                    <Image x:Name="SourceImage" Stretch="None"/>
                </Canvas>
            </ScrollViewer>
        </Border>

        <!-- 하단 버튼 -->
        <Border Grid.Row="2" Background="#252525" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock x:Name="SizeText" Text="크기: -" Foreground="#888888" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="클립보드 복사" Style="{StaticResource ActionButton}"
                            Background="#333333" Click="CopyToClipboard_Click" Margin="0,0,10,0"/>
                    <Button Content="다른 이름으로 저장" Style="{StaticResource ActionButton}"
                            Background="#333333" Click="SaveAs_Click" Margin="0,0,10,0"/>
                    <Button Content="저장" Style="{StaticResource ActionButton}"
                            Click="Save_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
